{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "prettier",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier", "import", "@typescript-eslint"],
    "rules": {
        "@typescript-eslint/no-explicit-any": 2,
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off"
    }
}
